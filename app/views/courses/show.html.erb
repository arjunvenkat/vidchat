
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @course.title %>
</p>

<p>
  <b>Description:</b>
  <%= @course.description %>
</p>

<p>
  <b>Objectives:</b>
  <%= @course.objectives %>
</p>

<p>
  <b>Prequisites:</b>
  <%= @course.prerequisites %>
</p>

<p>
  <b>Sections:</b>
  <ul>
    <% @course.sections.each do |section|%>
      <% if section.date.present? && section.time.present? %>
        <li><%= section.date %> at <%= section.time %> <%= link_to "Go to section", section %></li>
      <% else %>
        <li> This section has an invalid date or time </li>
      <% end %>
    <% end %>
  </ul>
</p>



<%= link_to "Add Section", new_section_path(:course_id => @course.id) %>
<br>


<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
