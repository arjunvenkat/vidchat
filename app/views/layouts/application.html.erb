			<nav>
        <h4 class="logo">BorderlessED</h4>
				<ul class="header_tabs">
					<% if session[:user_id] %>
						<li ><%= link_to "View My Profile", profile_url, :class => "btn_blue" %></li>
						<li><%= link_to "Sign Out", signout_url, :class =>"btn_blue"  %></li>
					<% else %>
						<li><%= link_to "Sign Up", new_user_url, :class => "btn_blue" %></li>
						<li><%= link_to "Sign In", signin_url, :class => "btn_blue" %></li>
					<% end %>
				</ul>
			</nav>
		
	</header>

  <p class="user_name">
        <% if session[:user_id] %>
          <% u = User.find_by_id(session[:user_id]) %>
          Hello, <%= u.name %>
       <% end %>
      </p>

<%= yield %>

</body>
</html>
